{
  "name": "@denote/core",
  "version": "0.1.0",
  "exports": {
    ".": "./mod.ts",
    "./cli": "./cli.ts",
    "./islands/ThemeToggle.tsx": "./islands/ThemeToggle.tsx",
    "./islands/MobileMenu.tsx": "./islands/MobileMenu.tsx",
    "./islands/Search.tsx": "./islands/Search.tsx",
    "./islands/CollapsibleNav.tsx": "./islands/CollapsibleNav.tsx",
    "./islands/CopyButton.tsx": "./islands/CopyButton.tsx",
    "./islands/ActiveToc.tsx": "./islands/ActiveToc.tsx",
    "./islands/AiChat.tsx": "./islands/AiChat.tsx",
    "./assets/styles.css": "./assets/styles.css",
    "./ga4": "./lib/ga4.ts",
    "./types": "./denote.config.ts"
  },
  "tasks": {
    "test": "deno test --allow-read --allow-net --allow-env",
    "ok": "deno fmt --check . && deno lint . && deno check && deno task test"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ],
      "exclude": [
        "react-no-danger"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "content/**/*.md"
    ]
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@std/path": "jsr:@std/path@1",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.25.3",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "@deer/gfm": "jsr:@deer/gfm@0.0.4",
    "@kitsonk/ga4": "jsr:@kitsonk/ga4@^0.1",

    "vite": "npm:vite@^7.3.1",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
    "zod": "npm:zod@^4.3.6",
    "preact-render-to-string": "npm:preact-render-to-string@^6.5.0"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  }
}
