{
  "name": "@denote/core",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "tasks": {
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update .",
    "test": "deno test --allow-read --allow-net --allow-env",
    "ok": "deno fmt --check . && deno lint . && deno check && deno task test",
    "mcp": "deno run -A mcp.ts",
    "mcp:http": "deno run -A mcp.ts --http --port 3100"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ],
      "exclude": [
        "react-no-danger"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "content/**/*.md"
    ]
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@std/path": "jsr:@std/path@1",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.25.3",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "@deno/gfm": "jsr:@deno/gfm@0.12.0",
    "vite": "npm:vite@^7.1.3",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
    "zod": "npm:zod@^4.3.6"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  }
}
