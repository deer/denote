{
  "name": "@denote/monorepo",
  "exports": "./packages/denote/mod.ts",
  "nodeModulesDir": "auto",
  "workspace": [
    "packages/denote",
    "packages/denote-init",
    "docs"
  ],
  "tasks": {
    "build": "cd docs && deno task build",
    "dev": "cd docs && deno task dev",
    "start": "cd docs && deno task start",
    "validate": "cd docs && deno task validate",
    "test": "deno test -A",
    "ok": "deno fmt --check && deno lint && deno check && deno task test",
    "cli": "deno run -A packages/denote/cli.ts"
  }
}
