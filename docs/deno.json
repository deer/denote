{
  "name": "@denote/docs",
  "exports": "./denote.config.ts",
  "tasks": {
    "dev": "deno run -A ../packages/denote/cli.ts dev",
    "build": "deno run -A ../packages/denote/cli.ts build",
    "start": "deno serve -A _fresh/server.js",
    "ok": "deno fmt --check && deno lint && deno check denote.config.ts",
    "validate": "deno run -A ../packages/denote/cli.ts validate"
  },
  "imports": {
    "@denote/core": "../packages/denote/mod.ts",
    "@denote/core/": "../packages/denote/",
    "@std/path": "jsr:@std/path@1",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "vite": "npm:vite@^7.3.1",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": ["vite/client"]
  },
  "exclude": ["**/_fresh/*"]
}
